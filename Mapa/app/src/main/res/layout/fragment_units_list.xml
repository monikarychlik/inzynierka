<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unitsListLayout"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="pl.inzynierka.monia.mapa.fragments.UnitsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="250dp"
            android:id="@+id/editTextSearchUnits"
            android:layout_height="wrap_content"
            android:inputType="text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewSearchUnits"
            android:layout_margin="6dp"
            android:background="@drawable/icon_search"
            android:contentDescription="@string/search" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchInfoUnits"
            android:layout_marginTop="48dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:text="@string/no_search_results"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listUnits"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>
